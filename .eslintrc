{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "max-len": ["error", 120],
        "no-console": ["off"],
        "no-plusplus": [
            "error", { "allowForLoopAfterthoughts": true }
        ],
        "semi": ["error", "never"]
    }
}